<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical"
    android:rowCount="4"
    android:columnCount="2">

        <ImageView
            android:id="@+id/dialogcombo1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="false"
            android:layout_row="0"
            android:layout_column="0"
            android:maxWidth="15dp"
            android:scaleType="fitXY" />

       <ImageView
        android:id="@+id/dialogcombo2"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="@+id/dialogcombo1"
        android:layout_row="1"
        android:adjustViewBounds="false"
        android:maxWidth="15dp"
        android:scaleType="fitXY" />

   

    <ImageView
        android:id="@+id/dialogcombo3"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="@+id/dialogcombo2"
        android:adjustViewBounds="false"
        android:maxWidth="15dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/dialogcombo4"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="@+id/dialogcombo3"
        android:adjustViewBounds="false"
        android:maxWidth="15dp"
        android:scaleType="fitXY" />

     <TextView
        android:id="@+id/dialogtextcombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:gravity="center" />
</GridLayout>